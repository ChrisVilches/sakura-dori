block variables
  - let subtitle = null

doctype html
html
  head
    title= helpers.joinTitle(title, subtitle)
    base(href=baseUrl)
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x' crossorigin='anonymous')
    link(rel='stylesheet', href='stylesheets/style.css')
    script(src='https://code.jquery.com/jquery-3.6.0.slim.min.js' integrity='sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=' crossorigin='anonymous')
    script(src='https://use.fontawesome.com/d72a37b632.js')
    include analytics-tag-partial
  body
    .container
      div.top-logo
        a(href='')= title
      include donation-partial
      if subtitle
        .mb-4
          h2= subtitle
      block content
      footer.footer
        .footer-link-container
          .footer-link
            a(class=(currentPath == '/' ? 'active-page' : '') href='') トップ
          .footer-link
            a(class=(currentPath == '/about' ? 'active-page' : '') href='about') このサイトについて
          .footer-link
            a(class=(currentPath == '/report' ? 'active-page' : '') href='report') システムの状態
        | By 
        a(href='https://www.chrisvilches.com')|Chris Vilches
